{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "allowJs": true, // @todo remove
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true, // @todo remove
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}
